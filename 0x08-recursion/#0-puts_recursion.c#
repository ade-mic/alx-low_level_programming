#include "main.h"
#include <stdio.h>
#include <string.h>
/**
 * _puts_recursion - a function that prints a string, followed by a new line
 * @s: string to be printed
 *
 * Return: void
 */

void _puts_recursion(char *s)
{
	int n;

	n = strlen(s);
	if (s[n] == '0')
		_putchar('\n');
      (s[n]);
	_putchar(s[n-1]);
}
