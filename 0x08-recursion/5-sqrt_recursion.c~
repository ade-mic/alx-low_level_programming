#include "main.h"
#include <stdio.h>
#include <string.h>
/**
 * _sqrt_recursion - returns tthe natural square root of a number
 * @n: natural number
 *
 * Return: int
 */

int _sqrt_recursion(int n)
{
	int i;

	i = 1;
	if (n < 0)
		return (-1);
	if (i > n / 2)
		return (-1);
	else
	{
		if (i * i == n)
			return i;
		return (_sqrt_recursion(i++));
	}
}
